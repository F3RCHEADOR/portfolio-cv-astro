<section
  class="max-w-screen-xl min-h-screen h-full mx-auto p-8 bg-main-light dark:bg-main-dark transform transition-all"
>
  <div id="contact" class="text-center">
    <div class="ml-48 relative h-23 mb-8 mt-4">
      <img
        src="burbuja-de-chat.png"
        alt="#"
        class="size-20 absolute -top-0.5 right-1/2 transform -translate-x-3/5 z-50 hover:opacity-70 transition-all"
      />
      <h1
        class="absolute -bottom-4 right-1/2 transform text-center z-40 -translate-x-1/4 text-3xl font-bold italic dark:text-headingg-main-dark"
      >
        Contacto
      </h1>
    </div>

    <form action="#" method="POST" class="space-y-8  w-full max-w-screen-lg mx-auto">
      <!-- Name Field -->
      <div class="mb-6">
        <label
          for="name"
          class="block text-lg font-semibold text-paragraph-light dark:text-paragraph-dark transition-all duration-300 ease-in-out"
        >
          Nombre Completo / Empresa
        </label>
        <input
          type="text"
          id="name"
          name="name"
          class="mt-2 block w-full px-6 py-3 border-2 border-border-light dark:border-border-dark rounded-md shadow-lg focus:outline-none focus:ring-4 focus:ring-heading-alt-light dark:focus:ring-heading-alt-dark focus:border-heading-alt-light dark:focus:border-heading-alt-dark transition-all duration-300 ease-in-out transform hover:scale-105 dark:bg-gray-700 dark:text-white capitalize"
          placeholder="Harry Potter / Howards"
          required
        />
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-2 md:gap-x-8 mb-6">
        <div class="mb-6 sm:mb-0">
          <label
            for="email"
            class="block text-lg font-semibold text-paragraph-light dark:text-paragraph-dark transition-all duration-300 ease-in-out"
          >
            Correo Electronico
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="mt-2 block w-full px-6 py-3 border-2 border-border-light dark:border-border-dark rounded-md shadow-lg focus:outline-none focus:ring-4 focus:ring-heading-alt-light dark:focus:ring-heading-alt-dark focus:border-heading-alt-light dark:focus:border-heading-alt-dark transition-all duration-300 ease-in-out transform hover:scale-105 dark:bg-gray-700 dark:text-white"
            placeholder="you@example.com"
            required
          />
        </div>

        <!-- Subject Select -->
        <div class="">
          <label
            for="subject"
            class="block text-lg font-semibold text-paragraph-light dark:text-paragraph-dark transition-all duration-300 ease-in-out"
          >
            Asunto
          </label>
          <select
            id="subject"
            name="subject"
            class="mt-2 block w-full px-6 py-3 border-2 border-border-light dark:border-border-dark rounded-md shadow-lg focus:outline-none focus:ring-4 focus:ring-heading-alt-light dark:focus:ring-heading-alt-dark focus:border-heading-alt-light dark:focus:border-heading-alt-dark transition-all duration-300 ease-in-out transform hover:scale-105 dark:bg-gray-700 dark:text-white"
          >
            <option value="feedback">Feedback</option>
            <option value="inquiry">Oferta</option>
            <option value="support">Soporte</option>
            <option value="other">Otro</option>
          </select>
        </div>
      </div>

      <!-- Message Field -->
      <div class="mb-6">
        <label
          for="message"
          class="block text-lg font-semibold text-paragraph-light dark:text-paragraph-dark transition-all duration-300 ease-in-out"
        >
          Mensaje
        </label>
        <textarea
          id="message"
          name="message"
          class="mt-2 block w-full px-6 py-3 border-2 border-border-light dark:border-border-dark rounded-md shadow-lg focus:outline-none focus:ring-4 focus:ring-heading-alt-light dark:focus:ring-heading-alt-dark focus:border-heading-alt-light dark:focus:border-heading-alt-dark transition-all duration-300 ease-in-out transform hover:scale-105 dark:bg-gray-700 dark:text-white"
          placeholder="Tu Mensaje"
          rows="6"
          required></textarea>
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="w-full bg-button-main-light dark:bg-button-main-dark text-white py-4 px-8 rounded-xl shadow-lg hover:bg-heading-alt-light dark:hover:bg-heading-alt-dark focus:outline-none focus:ring-4 focus:ring-heading-alt-light dark:focus:ring-heading-alt-dark transition-all duration-300 ease-in-out transform hover:scale-105 active:scale-95"
        >
          Enviar
        </button>
      </div>
    </form>
  </div>
</section>
